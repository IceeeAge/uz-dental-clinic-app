{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "baseUrl": ".",
    "strict": true,
    "jsx": "react", // Ensure JSX is set to "react" for handling JSX syntax
    "paths": {
      "@/components/*": ["src/components/*"],
      "@styles/*": ["src/styles/*"],
      "@Firebase/*": ["src/Firebase/*"],
      "@Utils/*": ["src/Utils/*"],
      "@GraphQL/*": ["src/GraphQL/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.jsx", // Add this line to include JSX files
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "app/_layout.jsx",
    "app/index.jsx",
    "app/sign-in.jsx",
    "app/(auth)/_layout.jsx",
    "app/(auth)/index.jsx",
    "app/(login)/_layout.ts",
    "components/PrimaryButton.jsx",
    "components/SecondaryButton.jsx",
    "app/(tabs)/appointment.jsx",
    "app/(tabs)/_layout.jsx",
    "GraphQL/mutation.jsx",
    "app/(login)/reset.jsx",
    "app/(login)/login.jsx",
    "app/(login)/sign-up.jsx",
    "app/(login)/sign-in-oauth.jsx",
    "app/(tabs)/home.jsx",
    "src/Utils/Colors.jsx",
    "src/components/PrimaryButton.jsx",
    "src/components/SecondaryButton.jsx",
    "src/app/(auth)/index.jsx",
    "src/app/(auth)/_layout.jsx"
  ]
}
